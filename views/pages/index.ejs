  <div class="row">
    <div class="col-6">
      <div v-show="!fbReady">
        <h1>loading firebase...</h1>
      </div>
      <div v-if="fbReady">
        <input v-model.trim="newItem.text" placeholder="text..." @keyup.enter="addItem('newItem','todos', newItem)">
        <button @click="addItem('newItem','todos', newItem)">add</button>
        <!-- <input v-model.trim="newTodoText" @keyup.enter="addTodo" placeholder="Add new Item"> -->
        <ul>
          <li v-for="todo in todos">
            <span @click="ctxClick(todo, $event)">{{todo.text}}</span>
            <!-- <input :value="todo.text" @input="updateTodoText(todo, $event.target.value)"> -->
            <button @click="removeTodo(todo)">X</button>
          </li>
        </ul>    
      </div>      
    </div>
    <div class="col-6">
      <h3>tsorfiB</h3>
      <div v-show="!fbReady">
        <h1>loading firebase...</h1>
      </div>
      <div v-if="fbReady">
        <h3>details - mode:{{detailMode}}</h3>
        <div v-if="detailMode === 'default'">
          <p>single click to inspect, double click to edit</p>
        </div>
        <div v-if="detailMode === 'inspect'">
          <h3>inspecting</h3>
          <ul class="v-for-object">
            <li v-for="(value, key, index) in inspectItem">
              -{{ index }}. {{ key }}: {{ value }}
            </li>
          </ul>
        </div>
        <div v-if="detailMode === 'edit' && editItem">
          <h3>editing</h3>
          <input v-model.trim="editItem.text" placeholder="text...">
          <button @click="updateTodo('fbkey', editItem)">update</button>
          <ul class="v-for-object">
            <li v-for="(value, key, index) in editItem">
              -{{ index }}. {{ key }}: {{ value }}
            </li>
          </ul>
        </div>
      </div>      
    </div>
  </div>
